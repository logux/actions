{
  "name": "@logux/actions",
  "version": "0.2.1",
  "description": "Types and action creators for build-in Logux actions",
  "keywords": [
    "logux",
    "crdt",
    "types"
  ],
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/.bin/jest --coverage && eslint . && check-dts && size-limit && yaspeller *.md"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "homepage": "https://logux.io/",
  "repository": "logux/actions",
  "sideEffects": false,
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./package.json": "./package.json"
  },
  "engines": {
    "node": "^12.0.0 || ^14.0.0 || >=16.0.0"
  },
  "peerDependencies": {
    "@logux/core": "^0.7.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@logux/client": "^0.12.1",
    "@logux/core": "^0.7.1",
    "@logux/eslint-config": "^45.4.6",
    "@logux/sharec-config": "^0.10.2",
    "@size-limit/preset-small-lib": "^5.0.2",
    "@types/jest": "^26.0.24",
    "@types/ws": "^7.4.7",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "check-dts": "^0.5.4",
    "clean-publish": "^2.2.0",
    "eslint": "^7.31.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-es5": "^1.5.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^34.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.1",
    "nanostores": "^0.3.3",
    "prettier": "^2.3.2",
    "simple-git-hooks": "^2.5.1",
    "size-limit": "^5.0.2",
    "ts-jest": "^27.0.4",
    "typescript": "^4.3.5",
    "yaspeller": "^7.0.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/esm",
    "globals": {
      "jsdom": false
    },
    "rules": {
      "@typescript-eslint/no-explicit-any": "off"
    },
    "overrides": [
      {
        "files": "./processing/index.d.ts",
        "rules": {
          "prefer-let/prefer-let": "off",
          "import/export": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "**/errors.ts"
  ],
  "size-limit": [
    {
      "import": "{ defineAction }",
      "limit": "35 B"
    }
  ],
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "Versioning",
      "GraphQL",
      "roadmap",
      "Logux"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.10.2"
  }
}
