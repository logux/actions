{
  "name": "@logux/actions",
  "version": "0.2.1",
  "description": "Types and action creators for build-in Logux actions",
  "keywords": [
    "logux",
    "crdt",
    "types"
  ],
  "scripts": {
    "unit": "tsm node_modules/uvu/bin.js . '\\.test\\.(ts|js)$'",
    "test": "c8 yarn unit && eslint . && check-dts && size-limit"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "homepage": "https://logux.io/",
  "repository": "logux/actions",
  "sideEffects": false,
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./package.json": "./package.json"
  },
  "engines": {
    "node": "^12.0.0 || ^14.0.0 || >=16.0.0"
  },
  "peerDependencies": {
    "@logux/core": "^0.7.0"
  },
  "devDependencies": {
    "@logux/client": "^0.14.4",
    "@logux/core": "^0.7.2",
    "@logux/eslint-config": "^46.1.1",
    "@size-limit/preset-small-lib": "^7.0.4",
    "@types/ws": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "c8": "^7.10.0",
    "check-dts": "^0.6.5",
    "clean-publish": "^3.4.4",
    "eslint": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-promise": "^6.0.0",
    "nanostores": "^0.5.8",
    "size-limit": "^7.0.4",
    "tsm": "^2.2.1",
    "typescript": "^4.5.4",
    "uvu": "^0.5.2"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "c8": {
    "exclude": [
      "**/*.test.*"
    ],
    "lines": 100,
    "check-coverage": true
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/esm",
    "globals": {
      "jsdom": false
    },
    "rules": {
      "@typescript-eslint/no-explicit-any": "off"
    },
    "overrides": [
      {
        "files": "./processing/index.d.ts",
        "rules": {
          "prefer-let/prefer-let": "off",
          "import/export": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "**/errors.ts"
  ],
  "size-limit": [
    {
      "import": "{ defineAction }",
      "limit": "55 B"
    }
  ]
}
